<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.watniwat.android.myapplication.Create.CreateCourseActivity">

    <Button
        android:id="@+id/btn_create_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="24dp"
        android:text="Create Course" />

    <EditText
        android:id="@+id/edt_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="24dp"
        android:hint="Course Name"
        android:inputType="textPersonName" />
    <EditText
        android:id="@+id/edt_course_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="24dp"
        android:hint="Course Id"
        android:layout_below="@id/edt_course_name"/>

    <EditText
        android:id="@+id/edt_course_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:inputType="textMultiLine"
        android:padding="24dp"
        android:hint="Course Description"
        android:layout_below="@id/edt_course_id" />
</RelativeLayout>
